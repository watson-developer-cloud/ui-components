{# The basic html template #}
<!DOCTYPE html>
<html>
<head>
  <title>Watson Platform Component Library</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="og:title" content="Watson Developer Cloud - UI Components Library">
  <meta name="og:description" content="SASS library that helps developers to create UIs quickly and consistently.">
  <link rel="icon" href="images/favicon.png?v=2" />

  {% block styles %}
  <link rel="stylesheet" href="build/bundle.css" media="screen" title="no title" charset="utf-8">
  {% endblock %}
  <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
</head>

<body>
  {% block body %}{% endblock %}
  {% block scripts %}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script type="text/javascript" src="build/bundle.js"></script>
  {% endblock %}
